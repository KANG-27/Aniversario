<script is:inline>
  document
    .getElementById("formulario")
    .addEventListener("submit", function (e) {
      e.preventDefault();

      const inputName = e.target[0];
      const inputPasword = e.target[1];

      let error = false;

      const shakeInput = (input) => {
        input.classList.remove("input-error");
        void input.offsetWidth;
        input.classList.add("input-error");
      };

      if (e.target[0].value !== "juana") {
        shakeInput(inputName);
        error = true;
      } else {
        inputName.classList.remove("input-error");
      }

      if (e.target[1].value !== "cheilo") {
        shakeInput(inputPasword);
        error = true;
      } else {
        inputPasword.classList.remove("input-error");
      }

      if (!error) {
        window.location.href = "/bienvenida";
      }
    });
</script>

